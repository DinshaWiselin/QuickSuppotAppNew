<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5576AA"
    tools:context=".ui.Profile_Fragment">

    <Button
        android:id="@+id/save_profile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFFFFF"
        android:text="SAVE"
        android:textAlignment="center"
        android:textColor="#0B300C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Detail_profile"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Detail_profile"
        tools:text="save" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="To be A Supporter"
        android:textAlignment="center"
        android:textColor="#0B300C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/save_profile"
        app:layout_constraintStart_toStartOf="@+id/save_profile"
        app:layout_constraintTop_toBottomOf="@+id/save_profile" />

    <ImageView
        android:id="@+id/sup_seeker_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/variant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/sup_seeker_image"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/sup_seeker_image"
        app:layout_constraintTop_toBottomOf="@+id/sup_seeker_image" />

    <EditText
        android:id="@+id/surname_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/name_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_profile"
        app:layout_constraintTop_toBottomOf="@+id/name_profile" />

    <EditText
        android:id="@+id/Location_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/surname_profile"
        app:layout_constraintStart_toStartOf="@+id/surname_profile"
        app:layout_constraintTop_toBottomOf="@+id/surname_profile" />

    <EditText
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="E-mail."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Location_profile"
        app:layout_constraintStart_toStartOf="@+id/Location_profile"
        app:layout_constraintTop_toBottomOf="@+id/Location_profile" />

    <EditText
        android:id="@+id/contact_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Contact No"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/email_profile"
        app:layout_constraintStart_toStartOf="@+id/email_profile"
        app:layout_constraintTop_toBottomOf="@+id/email_profile" />

    <EditText
        android:id="@+id/support_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Type of Support"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contact_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contact_profile"
        app:layout_constraintTop_toBottomOf="@+id/contact_profile" />

    <EditText
        android:id="@+id/Detail_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Details"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/support_profile"
        app:layout_constraintStart_toStartOf="@+id/support_profile"
        app:layout_constraintTop_toBottomOf="@+id/support_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>