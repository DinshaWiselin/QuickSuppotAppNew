<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5576AA"
    tools:context=".profile_supporter" >

    <Button
        android:id="@+id/save_profile2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="SAVE"
        android:textAlignment="center"
        android:textColor="#0B300C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/detail_profile"
        app:layout_constraintStart_toStartOf="@+id/detail_profile"
        app:layout_constraintTop_toBottomOf="@+id/detail_profile"
        tools:text="save" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="To be a Support Seeker"
        android:textAlignment="center"
        android:textColor="#0B300C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/save_profile2"
        app:layout_constraintStart_toStartOf="@+id/save_profile2"
        app:layout_constraintTop_toBottomOf="@+id/save_profile2" />

    <ImageView
        android:id="@+id/supporter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/variant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/supporter_image"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/supporter_image"
        app:layout_constraintTop_toBottomOf="@+id/supporter_image" />

    <EditText
        android:id="@+id/surname_Sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/name_sup_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_sup_profile"
        app:layout_constraintTop_toBottomOf="@+id/name_sup_profile" />

    <EditText
        android:id="@+id/location_sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/surname_Sup_profile"
        app:layout_constraintStart_toStartOf="@+id/surname_Sup_profile"
        app:layout_constraintTop_toBottomOf="@+id/surname_Sup_profile" />

    <EditText
        android:id="@+id/email_sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="E-mail."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/location_sup_profile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/location_sup_profile"
        app:layout_constraintTop_toBottomOf="@+id/location_sup_profile" />

    <EditText
        android:id="@+id/contact_sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Contact No"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/email_sup_profile"
        app:layout_constraintStart_toStartOf="@+id/email_profile"
        app:layout_constraintTop_toBottomOf="@+id/email_sup_profile" />

    <EditText
        android:id="@+id/skill_sup_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Experiences/Skills"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contact_sup_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contact_sup_profile"
        app:layout_constraintTop_toBottomOf="@+id/contact_sup_profile" />

    <EditText
        android:id="@+id/detail_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Details"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/skill_sup_profile"
        app:layout_constraintStart_toStartOf="@+id/skill_sup_profile"
        app:layout_constraintTop_toBottomOf="@+id/skill_sup_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
